---
import { projects } from "../data/projects";
import Layout from "../layouts/Layout.astro";

export const prerender = false;

const { id } = Astro.params;

let project;
if (id) {
  project = projects.find((projectData) => projectData.id === parseInt(id));
  if (!project) {
    Astro.redirect("/");
  }
}
---

<Layout title={project!.title}>
  <section
    class="w-full py-36 sm:py-0 min-h-screen flex flex-wrap items-center justify-center"
  >
    <div class="w-4/5 flex flex-col sm:flex-row flex-wrap items-center justify-between">
      <picture class="w-1/2 h-full">
        <img src={project!.images[0]} alt="project-image" />
      </picture>
      <article
        class="w-full sm:w-1/2 h-full flex items-center justify-center flex-col p-10 gap-10"
      >
        <h2 class="text-2xl font-medium">{project!.title}</h2>
        <p>
          {project!.description}
        </p>
        <div class="w-full flex gap-5 flex-wrap">
          <p class="font-semibold">Tecnolog√≠as Usadas:</p>
          {project!.technologies.map((tech) => <span>{tech}</span>)}
        </div>
      </article>
    </div>
  </section>
</Layout>
